{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 2
    }
  },
  "custom/npm-registry": {
    "format": "üì¶ {}",
    "exec": "~/.config/waybar/scripts/npm-registry.sh",
    "on-click": "~/.config/waybar/scripts/npm-registry-toggle.sh",
    "interval": 10,
    "tooltip": true
  },
  "custom/change-wallpaper": {
    "format": "Trocar wallpaper",
    "on-click": "~/.config/hypr/scripts/change_wallpaper.sh",
  },
  "hyprland/window": {
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },
  "custom/appmenu": {
    "format": "Apps",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
    "on-click": "rofi -show drun -replace",
    "on-click-right": "~/.config/ml4w/scripts/keybindings.sh",
    "tooltip": false
  },
  "custom/exit": {
    "format": "ÔÄë",
    "tooltip-format": "Powermenu",
    "on-click": "wlogout -b 4",
    "tooltip": false
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "tray": {
    "spacing": 10
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
  "custom/system": {
    "format": "Óë≥",
    "tooltip": false
  },
  "cpu": {
    "format": "/ C {usage}% ",
    "on-click": "alacritty -e htop"
  },
  "memory": {
    "format": "/ M {}% ",
    "on-click": "alacritty -e htop"
  },
  "disk": {
    "interval": 30,
    "format": "D {percentage_used}% ",
    "path": "/",
    "on-click": "alacritty -e htop"
  },
  "hyprland/language": {
    "format": "/ K {short}"
  },
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": [
      "custom/system",
      "disk",
      "cpu",
      "memory",
      "hyprland/language"
    ]
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´   {signalStrength}%",
    "format-ethernet": "Ôûñ  {ipaddr}",
    "format-disconnected": "Not connected",
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "alacritty -e nmtui"
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}   {capacity}%",
    "format-charging": "Ôóß  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": [
      "ÔâÑ ",
      "ÔâÉ ",
      "ÔâÇ ",
      "ÔâÅ ",
      "ÔâÄ "
    ]
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄ® ",
        "ÔÄ® "
      ]
    },
    "on-click": "pavucontrol"
  },
  "bluetooth": {
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "bluetoothctl connect A0:AC:69:1C:7C:E1 | bluetoothctl disconnect A0:AC:69:1C:7C:E1",
    "format-no-controller": ""
  },
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip": true,
    "format-icons": {
      "activated": "ÔèÅ",
      "deactivated": "ÔÄ£"
    },
    "on-click-right": "hyprlock"
  }
}